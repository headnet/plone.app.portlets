<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
        Portlet CSS class
        <form tal:attributes="action string:${here/absolute_url}/@@set-metadata" method="POST">
            <input type="hidden" name="name" tal:attributes="value request/name"/>
            <input type="hidden" name="referer" tal:attributes="value request/referer"/>
            <select name="css_class"
                    tal:define="selected_css_class python: view.get_metdata(request.get('name', '')).get('css_class', '')">
                <tal:block repeat="css_class python:here.portal_properties.site_properties.getProperty('css_classes').split('\n')">
                    <option value=""
                        tal:attributes="value python:css_class;
                                        selected python:selected_css_class == css_class"
                        tal:content="css_class"></option>
                </tal:block>
            </select>
            <input type="submit" name="submit" value="Send"/> 
        </form>
</metal:main>

</body>
</html>
